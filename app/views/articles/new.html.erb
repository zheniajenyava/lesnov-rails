<h1>Форма генерации нового государства</h1>
<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :Название %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :Описание %><br>
    <%= f.text_area :text %>
  </p>
  <p>
	<%= f.label :'Государственный язык'%><br>
	<%= f.select :language_id, options_from_collection_for_select(Language.all, :id, :name) %>

  </p>
  <p>
	<%= f.label :'Форма правления'%><br>
	<%= f.collection_radio_buttons :rule_id, Rule.all, :id, :name_with_initial %>
  </p> 
   <p>
	<%= f.label :'Президент'%><br>
	<%= f.select :president_id, options_from_collection_for_select(President.all, :id, :name_of_president, :prompt => true) %>
  </p>
  <p>
	<%= f.label :'Производство'%><br>


	<%= f.collection_check_boxes(:production_ids, Production.all, :id, :name_with_initial) do |item| %>
		<%= item.label(:"data-value" => item.value) { item.check_box + item.text }%>
	<% end %>
  </p>
  <p>
        <%= f.label :'Домен первого уровня'%><br>
        <%= f.select :domain_id, options_from_collection_for_select(Domain.all, :id, :name) %>
  </p>
  <p>
    <%= f.submit "Создать" %>
  </p>
<% end %>
